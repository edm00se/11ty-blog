{%- css %}
	.cover-wrap {
		position: relative;
		text-align: center;
		color: white;
	}
	.cover-wrap h2 {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}
	a.cover-link,
	a.cover-link[href]:visited {
		color: white;
	}
	.cover-img,
	.cover-img > img {
		width: 100%;
		filter: brightness(75%);
	}
{%- endcss %}
{%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
<ol reversed class="postlist">
{% for post in postslist | reverse %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		{%- if post.data.cover_image %}
			{%- set modifiedCoverImagePath %}{{ post.data.cover_image | modifyCoverImage }}/{% endset %}
			<a href="{{ post.url }}" class="postlist-link cover-link">
				<div class="cover-wrap">
					<span class="cover-img">{% image modifiedCoverImagePath, "cover image from post" %}</span>
					<h2>
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							<code>{{ post.url }}</code>
						{% endif %}
						<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
					</h2>
				</div>
			</a>
		{%- else %}
			<h2><a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h2>
			<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
		{%- endif %}
	</li>
{% endfor %}
</ol>
